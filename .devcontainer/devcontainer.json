{
  "name": "Drupal 11 with DDEV",
  "image": "mcr.microsoft.com/vscode/devcontainers/php:8",
  "features": {
    "docker-in-docker": "latest"
  },
  "postCreateCommand": ["bash", "setup.sh"],
  "forwardPorts": [80, 443],
  "portsAttributes": {
    "80": {
      "label": "Drupal Site",
      "onAutoForward": "openPreview"
    }
  },
  "extensions": [
    "xdebug.php-debug",
    "bmewburn.vscode-intelephense-client"
  ]
}
